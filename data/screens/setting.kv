<SettingFloatLayout>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'data/icons/setting/background.png'

    Button:
        size_hint: 0.12625, 0.176315
        pos_hint: {"x": .015, 'y': .789473}
        background_normal:  "data/icons/setting/return.png"
        background_down:    "data/icons/setting/return.png"
        on_press: app.on_main_screen()

    Button:
        name: 'environment_switch'
        id: environment_switch
        size_hint: 0.10125, 0.13421
        pos_hint: {"x": .73875, 'y': .4921}
        background_normal:  "data/icons/setting/off.png"
        background_down:    "data/icons/setting/off.png"
        on_press: root.environment_switch_pressed()

    Button:
        name: 'power_switch'
        id: power_switch
        size_hint: 0.10125, 0.13421
        pos_hint: {"x": .73875, 'y': 0.16052}
        background_normal:  "data/icons/setting/off.png"
        background_down:    "data/icons/setting/off.png"
        on_press: root.power_switch_pressed()